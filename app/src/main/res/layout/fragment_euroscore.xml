                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right">

                <RadioButton
                    android:id="@+id/cabg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cabg"
                    android:layout_weight="2"/>

                <RadioButton
                    android:id="@+id/nonCabg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nonCabg"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/twoProcedures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/twoProcedures"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/threeProcedures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/threeProcedures"
                    android:layout_weight="2"/>
            </RadioGroup>

            </androidx.cardview.widget.CardView>

