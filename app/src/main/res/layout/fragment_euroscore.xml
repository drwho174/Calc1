                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="20.0dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pulmonaryArteryPressureCardView">

                <TextView
                    android:id="@+id/urgencyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/urgency"
                    android:layout_gravity="center_vertical"/>

            <RadioGroup
                android:id="@+id/urgency"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right">

                <RadioButton
                    android:id="@+id/elective"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/elective"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/urgent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/urgent"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/emergency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/Salvage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/salvage"
                    android:layout_weight="2"/>


            </RadioGroup>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/procedureWeightCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/urgencyCardView">

                <TextView
